{
  "version": "0.0.1",
  "configurations": [
    {
      "name": "postgres",
      "runtimeExecutable": "docker-compose",
      "runtimeArgs": ["up", "-d", "postgres"],
      "port": 5432
    },
    {
      "name": "api",
      "runtimeExecutable": "uvicorn",
      "runtimeArgs": ["app.main:app", "--reload", "--host", "0.0.0.0", "--port", "8000"],
      "port": 8000
    },
    {
      "name": "ui",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "port": 3000
    }
  ]
}
